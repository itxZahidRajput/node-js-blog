<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= blog.title %>
        </title>
</head>

<body>
    <%- include('./partials/navbar') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <div class="container mt-4">
                <img src="<%= blog.createdBy.profileImageURL %>" width="50px" class="img-fluid">
                <span>Create by: <%= blog.createdBy.fullName %></span>

            </div>
            <img src="<%= blog.coverImageURL %>" width="700px" class="img-fluid mt-3">
            <p class="mt-3">
                <%= blog.body %>
            </p>
        </div>

        <% if (locals.user) { %>
            <div class="container mt-4">
                <h3>Comments (<%= comments.length%>)</h3>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="form-group mt-4">
                        <textarea name="content" id="content" class="form-control" required></textarea>
                        <button type="submit" class="btn btn-primary mt-3" placeholder="Enter your comment">Add
                            Comment</button>
                    </div>
                </form>
            </div>
            <% } %>

                <div class="container mt-4">
                    <% comments.forEach(comment=> { %>
                        <div class="card mt-3">
                            <div class="card-body">
                                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" class="img-fluid">
                                <span>Create by: <%= comment.createdBy.fullName %></span>
                                <p>
                                    <%= comment.content %>
                                </p>
                            </div>
                        </div>
                        <% }) %>
                </div>




                <%- include('./partials/scripts') %>
</body>

</html>